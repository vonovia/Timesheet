<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:l="sap.ui.layout" controllerName="vonovia.timesheet.controller.Worklist">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>worklistViewTitle}">
		<semantic:content>
			<l:Grid id="__grid0">
				<l:content>
					<sap.ui.unified:Calendar xmlns:sap.ui.unified="sap.ui.unified" ariaLabelledBy="__xmlview0--nameColumnTitle" id="calendar" intervalSelection="true" firstDayOfWeek="1"/>
					<sap.ui.comp.smartform:SmartForm entityType="TIMESHEET_SLOTSSet" xmlns:sap.ui.layout="sap.ui.layout" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:sap.ui.comp.smartform="sap.ui.comp.smartform" xmlns:sap.ui.comp.smartfield="sap.ui.comp.smartfield" id="__form0">
						<sap.ui.comp.smartform:groups>
							<sap.ui.comp.smartform:Group label="Erfassung für User: {appView>/username}" id="__group0" useHorizontalLayout="true">
								<sap.ui.comp.smartform:formElements>
									<sap.ui.comp.smartform:GroupElement xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:footerbar="sap.ushell.ui.footerbar" xmlns:l="sap.ui.layout" xmlns:sap.ui.layout="sap.ui.layout" xmlns:sap.ui.comp.smartform="sap.ui.comp.smartform" id="__element0_copy">
										<sap.ui.comp.smartform:elements>
											<sap.ui.comp.smartfield:SmartLabel xmlns:sap.ui.comp.smartfield="sap.ui.comp.smartfield" text="Uhrzeit für Kommen" width="100%" id="startTimeLabel"/>
											<TimePicker xmlns="sap.m" placeholder="HH:mm" placeholderSymbol="-" mask="h9:59:59" displayFormat="HH:mm" localeId="de-DE" id="__picker1_copy" value="{StartTime}"/>
										</sap.ui.comp.smartform:elements>
									</sap.ui.comp.smartform:GroupElement>
									<sap.ui.comp.smartform:GroupElement id="__element0">
										<sap.ui.comp.smartform:elements>
											<sap.ui.comp.smartfield:SmartLabel text="Uhrzeit für Gehen" width="100%" id="EndTimeLabel"/>
											<TimePicker placeholder="HH:mm" placeholderSymbol="-" mask="h9:59:59" displayFormat="HH:mm" localeId="de-DE" id="__picker1" value="{EndTime}"/>
										</sap.ui.comp.smartform:elements>
									</sap.ui.comp.smartform:GroupElement>
									<sap.ui.comp.smartform:GroupElement id="__element1">
										<sap.ui.comp.smartform:elements>
											<sap.ui.comp.smartfield:SmartLabel text="Pause" width="100%" id="BreakLabel"/>
											<TimePicker placeholder="HH:mm" placeholderSymbol="-" mask="h9:59:59" displayFormat="HH:mm" localeId="de-DE" id="endTimePicker" value="{BreakDuration}"/>
										</sap.ui.comp.smartform:elements>
									</sap.ui.comp.smartform:GroupElement>
									<sap.ui.comp.smartform:GroupElement id="__element3">
										<sap.ui.comp.smartform:elements>
											<sap.ui.comp.smartfield:SmartLabel text="Ausgleich" width="100%" id="comenstationLabel"/>
											<TimePicker placeholder="HH:mm" placeholderSymbol="-" mask="h9:59:59" displayFormat="HH:mm" localeId="de-DE" id="__picker2" value="{CompensationTime}"/>
										</sap.ui.comp.smartform:elements>
									</sap.ui.comp.smartform:GroupElement>
									<sap.ui.comp.smartform:GroupElement id="__element2">
										<sap.ui.comp.smartform:elements>
											<sap.ui.comp.smartfield:SmartLabel text="Bemerkung" width="100%" id="TextLabel"/>
											<TextArea id="breakDurationPicker" value="{TO_SLOTS/Note}"/>
										</sap.ui.comp.smartform:elements>
									</sap.ui.comp.smartform:GroupElement>
								</sap.ui.comp.smartform:formElements>
							</sap.ui.comp.smartform:Group>
						</sap.ui.comp.smartform:groups>
					</sap.ui.comp.smartform:SmartForm>
				</l:content>
			</l:Grid>
			<Table id="table" width="auto" class="sapUiResponsiveMargin" items="{ path: '/TIMESHEET_SLOTSet', sorter: { path: 'SlotDate', descending: false } }" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished">
				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search="onSearch" width="auto"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id="nameColumn">
						<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
					</Column>
					<Column id="__column0">
						<header>
							<Text text="Arbeitszeit" id="__text4"/>
						</header>
					</Column>
					<Column id="__column1">
						<header>
							<Text id="__text5" text="Bemerkung"/>
						</header>
					</Column>
					<Column id="__column2">
					    <header>
					        <Text text="Saldo" id="__text2"/>
					    </header>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onPress" detailPress="onPress">
						<cells>
							<DatePicker value="{path: 'SlotDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'short', strictParsing: true}}" id="__identifier0" editable="false"/>
							<TimePicker placeholder="HH:mm" placeholderSymbol="-" mask="h9:59:59" displayFormat="HH:mm" localeId="de-DE" id="__picker0" value="{path: 'WorkTime', type: 'sap.ui.model.odata.type.Time'}" editable="false"/>
							<Text text="{Note}" id="__text1"/>
							<TimePicker placeholder="HH:mm:ss" placeholderSymbol="-" mask="h9:59:59" displayFormat="HH:mm:ss" localeId="de-DE" id="__picker3" editable="false" value="{path: 'Saldo', type: 'sap.ui.model.odata.type.Time'}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>
		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id="shareTile" title="{worklistView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>
		<semantic:customFooterContent>
			<Button text="Speichern" width="100px" id="save" type="Emphasized" press="onSave"/>
			<Button text="Senden" width="100px" id="send" press="_showSummary"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>
</mvc:View>